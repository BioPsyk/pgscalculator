/*
 * -------------------------------------------------
 *  pgscalculator config file
 * -------------------------------------------------
*/

// Example config for a sbayesRC run
params {

  // the other option is "effectiveN"
  whichN="totalN"

  // pgs method
  method="sbayesrc"

  // genotype build
  gbuild="37"
  lbuild="37"

  // sbayesRC specific
  calc_posteriors_sbayesrc = [ 
      score_columns: "2 5 8",
      options: [ 
          // Parameters with values
          gamma: "0.0,0.01,0.1,1",
          pi: "0.95,0.02,0.02,0.01",
          burn_in: "2000",
          chain_length: "10000",
          out_freq: "10",
          p_value: "0.99",
          rsq: "0.95",
          thread: "6",
          seed: "80851",
          thin: "10",
          // sbayesRC specific parameters
          // TODO: Add annotation file path when available
          // annot: "/path/to/functional/annotations"
      ],
      flags: [ 
          // Boolean flags
          unscale_genotype: true,
          exclude_mhc: true,
          no_mcmc_bin: false,
          impute_n: true
      ] 
  ]

}
